<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>scenes#show</h1>

        <h1><%= @scene.title %></h1>
        <%= render "shared/card_scene", %>
    <div class="list-reviews">
      <h2>Reviews</h2>
      <ul>
        <% @scene.reviews.each do |scene| %>
          <li><%= review.content %></li>
          <li><%= review.rating %></li>
        <% end %>
      </ul>
    </div>

<%= simple_form_for [@scene, @review] do |f| %>
        <%= f.input :rating, label: 'Note', collection: 0..5 %>
        <%= f.input :content, label: 'Avis' %>
        <%= f.submit class: 'btn'%>
      <% end %>


<%= link_to "delete", scene_path, class: 'btn btn-primary' %>
