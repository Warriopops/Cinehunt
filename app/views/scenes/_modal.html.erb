<i class="fa-regular fa-heart" style="color: #1e1d5d;" data-bs-toggle="modal" data-bs-target="#exampleModal"></i>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      <% if current_user.favorite_lists.any? %>
        <%= simple_form_for favorite do |f| %>
        <%= f.association :favorite_list %>
        <%= f.hidden_field :scene, value: scene.id  %>
        <div class="form-group">
          <%= f.button :submit, 'Ajouter Ã  la liste de favoris', class: 'btn btn-primary' %>
       </div>
        <% end %>
        <% else %>
          <%= link_to "New favorite list", new_favorite_list_path %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
