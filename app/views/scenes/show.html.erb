<div class="container">
  <%= render "shared/backtofutur" %>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= render "shared/card_scene", scene: @scene %>
      <%= link_to "Lancer RA <i class='fa-solid fa-camera' style='color: #ffffff';></i>".html_safe, ar_scene_path(@scene), class: 'btn btn-primary'%>
      <%= render "shared/card_content_scene", scene: @scene %>
      <%= render partial: "modal_map" %>
          <div class="rating-moyen content text-center">
            <h3 class="product-rating content text-center">Moyenne: 4.6/5</h3>
              <i class="fa-solid fa-star" style="color: #353b45;"></i>
              <span class="fa-solid fa-star" style="color: #353b45;"></span>
              <span class="fa-solid fa-star"></span>
              <span class="fa-solid fa-star" style="color: #353b45;"></span>
              <span class="fa-regular fa-star"></span>
          </div>
            <h5 class="card-review">Avis sur la scene:</h5>
          </div>
              <% @scene.reviews.each do |review| %>
                <div class="card-review">
                  <p><%= review.user.username %></p>
                  <p><%= review.content %></p>
                  <p><%= review.rating.to_i%>/5</p>
                </div>
              <% end %>

    <%= simple_form_for [@scene, @review] do |f| %>
        <%= f.input :rating, label: 'Note', collection: 0..5 %>
        <%= f.input :content, label: 'Avis' %>
        <%= f.button :submit, class: 'btn'%>
      <% end %>
          </div>
      </div>

    </div>

  </div>
</div>
