<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1><%= @scene.movie.title %></h1>
      <h3><%= @scene.title %></h3>

      <%= render "shared/card_scene", scene: @scene %>

    <%= link_to "Lancer RA <i class='fa-solid fa-camera' style='color: #ffffff';></i>".html_safe, scenes_path, class: 'btn btn-primary'%>

    <div class="list-reviews">
      <h3>Avis sur la scene</h3>

<i class="fa-solid fa-star" style="color: #353b45;"></i>
        <span class="fa fa-star unchecked"></span>
        <span class="fa fa-star unchecked"></span>
        <span class="fa fa-star unchecked"></span>
        <span class="fa fa-star" style="color: #0F2C59;"></span>
        <span class="fa fa-star"></span>

      <ul>
        <% @scene.reviews.each do |review| %>
          <li><%= review.content %></li>
          <li><%= review.rating %></li>
        <% end %>
      </ul>
    </div>

<%= simple_form_for [@scene, @review] do |f| %>
        <%= f.input :rating, label: 'Note', collection: 0..5 %>
        <%= f.input :content, label: 'Avis' %>
        <%= f.button :submit, class: 'btn'%>
      <% end %>


<div class="scene-card" data-controller="heart" data-heart-scene-id="<%= @scene.id %>">
  <div class="heart-icon" data-action="click->heart#showModal">&#x2665;</div>
  <div class="modal" data-heart-target="modal" style="display: none;">
    <p>Modal content</p>
    <button data-action="click->heart#hideModal">Fermer</button>

  <%# <%= link_to "delete", scene_path(@scene), class: 'btn btn-primary' %>
    </div>

  </div>
</div>

