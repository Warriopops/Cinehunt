<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag("cine-hunt.png", alt: "cine-hunt feed", class: "logo img-fluid") %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto align-items-center">
        <li class="nav-item me-3"> <!-- Ajusté la marge à me-3 -->
          <%= form_with url: scenes_path, method: :get, class: "d-flex" do %>
            <%= text_field_tag :query, params[:query], class: "form-control me-2 rounded-pill", placeholder: "Rechercher" %>
            <button class="btn btn-outline-success me-2" type="submit"> <!-- Ajusté la marge à me-2 -->
              <i class="fas fa-search"></i>
            </button>
          <% end %>
        </li>

        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to favorite_lists_path, class: "nav-link" do %>
              <i class="fas fa-heart me-1"></i> Ma liste
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to user_path(current_user), class: "nav-link" do %>
              Mon profil
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" do %>
              Se déconnecter
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link" do %>
              Connexion
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
