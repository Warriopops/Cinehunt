<div class="container-scene-show">
  <%= render "shared/backtofutur" %>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= render "shared/card_scene", scene: @scene, favorite: @current_favorite %>


      <%= render "shared/card_content_scene", scene: @scene %>


      <div class="btn_container">
        <p>DÃ©marrer AR</p>
        <%= render "ar_button", scene: @scene %>
      </div>

      <%= render partial: "modal_map" %>


          <div class="rating-moyen content text-center">
            <h3 class="product-rating content text-center">Moyenne: <%= @scene.rating %>/5</h3>
              <i class="fa-solid fa-star" style="color: #353b45;"></i>
              <span class="fa-solid fa-star" style="color: #353b45;"></span>
              <span class="fa-solid fa-star"></span>
              <span class="fa-solid fa-star" style="color: #353b45;"></span>
              <span class="fa-regular fa-star"></span>
          </div>
            <h4 class="card-review">Avis sur la scene</h4>
          </div>


              <% @scene.reviews.each do |review| %>

                <div class="card-review">
                  <p>Pseudo : <%= review.user.username %></p>
                  <p>Commentaire : <%= review.content %></p>
                  <p>Note : <%= review.rating.to_i%> / 5</p>
                </div>
              <% end %>
    <div class="container-form">
    <%= simple_form_for [@scene, @review] do |f| %>
        <%= f.input :rating, label: 'Note', collection: 0..5 %>
        <%= f.input :content, label: 'Avis' %>
        <%= f.button :submit,"Ajouter" , class: 'btn'%>
      <% end %>
      </div>
          </div>
      </div>

    </div>

  </div>
</div>
