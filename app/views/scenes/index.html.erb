<div class="container">
  <div class="scene-container">
    <h1>Scenes</h1>
    <%= link_to "Ajouter une scene", new_scene_path, class: 'btn-card' %>
  </div>
  <ul class="cards-scene">
    <% @scenes.each do |scene| %>
      <li class="card-scene"><%= render partial: "shared/card_scene", locals: { scene: scene } %></li>
    <% end %>
  </ul>

  <div style="width: 100%; height: 300px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

<%# <%= link_to "Map", map_path, class: 'btn-card' %>
</div>
