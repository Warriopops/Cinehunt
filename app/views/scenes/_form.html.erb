<div class="form-container">
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-4">
        <%= simple_form_for scene do |f| %>
          <%= f.association :movie, label: 'Titre du film/série' %>
          <%= f.input :title, label: 'Titre de la scene' %>
          <%= f.input :content, label: 'Description de la scene' %>

          <%= f.input :address, as: :text, label: 'Adresse' %>
          <%= f.input :payant, as: :boolean, label: 'Accessible gratuitement' %>
          <%= f.input :time, label: 'Durée de visite moyenne' %>
          <%= f.input :link, label: 'Lien vers le lieu' %>
          <%= f.input :photo, as: :file, input_html: { data: { action: "change->photo-preview#displayPreview", photo_preview_target: "photoInput"} } %>
          <%= f.button :submit, 'Ajouter le lieu de tournage'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
